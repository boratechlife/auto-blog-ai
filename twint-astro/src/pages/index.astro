---
import Layout from '../layouts/Layout.astro';
import titles from '../../output.json'
---

<Layout title="Welcome to Astro.">
  <main class="flex flex-wrap lg:flex-nowrap py-10 px-4 container mx-auto lg:px-10 gap-6">

   
    <section class="w-2/3 mx-auto">
    
      <!-- component -->
      <div class="flex items-center w-full justify-center px-6 py-10">
        <div class="flex flex-col brder gap-4 rounded-lg flex-none w-full">
          <div class="flex flex-col gap-10">
            {
              titles.map((item) => {
                return (
                  <div class="bg-white shadow-md rounded-lg p-6 mb-4 flex flex-col md:flex-row">
                    <blockquote
                      id="block-quote"
                      class="text-[#161215] text-xl font-bold leading-normal flex-grow"
                    >
                      {item.title}
                    </blockquote>
                    <div class="flex-shrink-0 mt-4 md:mt-0 md:ml-4">
                      

                      <a
                        href={`/blog/${item.slug}`}
                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full mt-4 block"
                      >
                      View
                      </a>
                    </div>
                  </div>
                );
              })
            }

            <!-- Item -->
          </div>
          <div class="p-4">
            <button
              class="w-full border p-2 rounded-md hover:opacity-60 transition"
              >View all</button
            >
          </div>
        </div>
      </div>
    </section>
    <div class="w-full lg:w-1/3">
      <script src="https://donorbox.org/widget.js" paypalExpress="false"></script><iframe src="https://donorbox.org/embed/dev-and-hosting?default_interval=m" name="donorbox" allowpaymentrequest="allowpaymentrequest" seamless="seamless" frameborder="0" scrolling="no" height="900px" width="100%" style="max-width: 500px; min-width: 250px; max-height:none!important"></iframe></div>
  </main>
</Layout>
